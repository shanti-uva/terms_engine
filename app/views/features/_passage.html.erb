<section class="panel panel-default">
  <div class="panel-heading"><a class="accordion-toggle collapsed" data-parent="#accordion" data-toggle="collapse" href="#collapsePassages-<%= passage.id %>" aria-expanded="true"><span class="glyphicon glyphicon-plus"></span>
<%  passage.citations.each do |citation| %>
<%=   citation.bibliographic_reference.html_safe %><br>
<%  end %>
  </div>
	<div id="collapsePassages-<%= passage.id %>" class="panel-collapse collapse">
	  <div class="panel-body">
      <h5><%= Passage.model_name.human.titleize.s %></h5>
<%=   passage.content.html_safe %>
<%=   render partial: 'note', collection: passage.notes %>
<%=   render partial: 'passage_translation', collection: passage.passage_translations %>
    </div>
  </div>
</section>