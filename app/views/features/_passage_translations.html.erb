<% passage_translations.each do |passage_translation| %>
   <section class="panel panel-default">
     <div class="panel-heading"><a class="accordion-toggle collapsed" data-parent="#accordion" data-toggle="collapse" href="#collapsePassageTranslation-<%= passage_translation.id %>" aria-expanded="true"><span class="glyphicon glyphicon-plus"></span></a>
<%   passage_translation.citations.each do |citation| %>
<%=    citation.bibliographic_reference.html_safe %><br>
 <%  end %>
     <div id="collapsePassageTranslation-<%= passage_translation.id %>" class="panel-collapse collapse">
       <div class="panel-body">
<%=    render partial: 'passage_translation', object: passage_translation %>
       </div>
     </div>
   </section>
<% end %>