<% 0.upto(lists.size-1).each do |i|
     list = lists[i]
	   related_method = related_methods[i]
	   list.each do |item|
	     related = item.send(related_method)
	     if related.instance_of? Feature
	       feature = related
	       definition = nil
	     else
	       definition = related
	       feature = definition.feature
	     end %>
       <dt><%= item.feature_relation_type.label %><dt>
			 <dd><%= link_to feature.prioritized_name(current_view).name.s, feature_path(feature.fid) %> (<%= item.perspective.name %>)</dd>
<%     if !definition.nil? %>
       <dd><p><%= definition.content.s.html_safe %></p></dd>
<%     end %>
<%   end
   end %>