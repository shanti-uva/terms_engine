<% 
add_breadcrumb_item feature_link(object.parent_node.feature)
add_breadcrumb_item link_to Definition.model_name.human(count: :many).titleize.s, admin_feature_path(object.feature, section: "definitions")
add_breadcrumb_item link_to parent_object.content.strip_tags.truncate(25).s, admin_definition_definition_relation_path(parent_object)
add_breadcrumb_item link_to DefinitionRelation.model_name.human.pluralize.s, admin_definition_definition_relations_path(parent_object)
%>
<section class="panel panel-content">
  <div class="panel-heading">
     <h6><%= DefinitionRelation.model_name.human.titleize.s %></h6>
  </div>
  <div class="panel-body">
    <p id="notice"><%= notice %></p>

    <p>
    <strong>Child node:</strong>
    <%= @definition_relation.child_node_id %>
    </p>

    <p>
    <strong>Parent node:</strong>
    <%= @definition_relation.parent_node_id %>
    </p>

     <%= link_to ts('edit.this'), edit_admin_definition_definition_relation_path(object.child_node,@definition_relation), class: 'btn btn-primary form-submit' %> |
     <% if !defined?(parent_object) %>
       <%= link_to ts('back.this'), admin_path  %>
     <% else %>
       <%=  link_to ts('cancel.this'), admin_definition_definition_relations_path(parent_object), class: 'btn btn-primary form-submit', id: 'edit-cancel' %>
     <% end %>
  </div> <!-- END panel-body -->
 </section> <!-- END panel -->
