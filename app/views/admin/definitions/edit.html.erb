<% 
add_breadcrumb_item feature_link(object.feature, section: "definitions")
add_breadcrumb_item link_to object.content.strip_tags.truncate(25).s, admin_feature_definition_path(object.feature,object)
add_breadcrumb_item ts('edit.this')
%>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6>Editing <%= Definition.model_name.human.titleize.s %></h6>
  </div>
  <div class="panel-body">
    <%= form_with(model: [:admin, object.feature, object], local: true) do |form| %>
      <%=  render partial: 'form_fields', locals: {form: form} %>
      <div class="actions">
        <%=  link_to ts('cancel.this'), admin_feature_definition_path(object.feature,object), class: 'btn btn-primary form-submit', id: 'edit-cancel' %> | <%= globalized_submit_tag 'update.this', class: 'btn btn-primary form-submit' %>
      </div>
    <% end %>

    <%= form_with(model: [:admin, object, object.enumeration ], local: true) do |form| %>
      <%=  render partial: 'admin/enumerations/form_fields', locals: {form: form, context_type: 'Definition', context_id: object.id} %>
      <div class="actions">
        <%=  link_to ts('cancel.this'), admin_feature_definition_path(object.feature,object), class: 'btn btn-primary form-submit', id: 'edit-cancel' %> | <%= globalized_submit_tag 'update.this', class: 'btn btn-primary form-submit' %>
      </div>
    <% end %>


    
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
