<%  feature = object.definition.feature
    add_breadcrumb_item feature_link(feature)
    add_breadcrumb_item link_to 'definitions', admin_feature_definitions_path(feature)
    add_breadcrumb_item link_to 'definition', admin_feature_definition_path(feature, parent_object) %>
<%= form_with(model: [:admin, parent_object, object], local: true) do |f| %>
      <h1><%= ts(:for, what: t('relat.ion.this.one').titleize, whom: "\"#{object.definition.snippet}\" (#{feature.prioritized_name(current_view).name})") %></h1>
<%=   render partial: 'form_fields', locals: {f: f} %>
<%=   link_to(ts('cancel.this'), admin_feature_definition_path(parent_object.feature, parent_object), class: 'btn btn-primary form-submit', id: 'edit-cancel') %> |
<%=   globalized_submit_tag 'update.this', class: 'btn btn-primary form-submit' %>
<%  end %>
<%= javascript_include_tag 'terms_engine/definition_association_admin' %>