    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<fieldset>
  <div class="row">
<%= f.label(:code).s %>
<%= f.text_field :code, class: [:text, 'text-full form-control form-text'] %>
  </div>
  <div class="row">
<%= f.label(:title).s %>
<%= f.text_field :title, class: [:text, 'text-full form-control form-text'] %>
  </div>
  <div class="row">
<%= f.check_box :processed %>
<%= f.label(:processed).s %>
  </div>
	<div class="row">
<%= f.label(:agent).s %>
<%= f.text_field :agent, class: [:text, 'text-full form-control form-text'] %>
	</div>
  <div class="row">
<%= f.label :language_id, Language.model_name.human.titleize.s %>
