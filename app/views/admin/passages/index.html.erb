<%
if parent_object.instance_of? Feature
  add_breadcrumb_item feature_link(parent_object)
else
  add_breadcrumb_item link_to parent_object.model_name.human.titleize.s, polymorphic_path([:admin, parent_object.feature, parent_object])
end
%>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= Passage.model_name.human.pluralize.titleize.s %></h6>
  </div>
  <div class="panel-body">
<%=       render :partial => 'list', :locals => { :list => parent_object.passages } %>
<% if parent_object.instance_of? Feature %>
        <%=  link_to ts('back.this'), admin_feature_path(parent_object.fid) , class: 'btn btn-primary form-submit', id: 'edit-cancel' %> 
<% else %>
        <%=  link_to ts('back.this'), polymorphic_path([:admin, parent_object.feature, parent_object]) , class: 'btn btn-primary form-submit', id: 'edit-cancel' %> 
<% end %>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
